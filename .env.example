# =============================================================================
# RealTera Environment Variables
# =============================================================================

# Database (PostgreSQL)
# For local dev: Use Prisma's local dev server or a local PostgreSQL instance
# For production: Use Supabase, Neon, or other managed PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/realtera?schema=public"

# Stack Auth (Authentication)
NEXT_PUBLIC_STACK_PROJECT_ID=""
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=""
STACK_SECRET_SERVER_KEY=""

# Stripe (Payments - Phase 2)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Email (Resend)
RESEND_API_KEY=""

# Mantle Network (Blockchain Integration)
# Chain ID: 5003 for Mantle Sepolia (testnet), 5000 for mainnet
NEXT_PUBLIC_CHAIN_ID="5003"
# RPC URLs (optional, defaults are built-in)
NEXT_PUBLIC_RPC_URL="https://rpc.sepolia.mantle.xyz"
# Admin wallet private key for server-side operations (DO NOT COMMIT!)
ADMIN_PRIVATE_KEY=""
# Contract addresses
NEXT_PUBLIC_CONTRACT_ADDRESS=""
CONTRACT_ADDRESS=""

# Attestation Registry (On-chain attestations)
# Set to "true" to use mock data for demos without real blockchain
NEXT_PUBLIC_MOCK_BLOCKCHAIN="true"
# Attestation Registry contract address (after deployment)
NEXT_PUBLIC_REGISTRY_CONTRACT_ADDRESS=""

# Pinata IPFS Storage (for project/developer images)
PINATA_API_KEY=""
PINATA_API_SECRET=""
PINATA_JWT=""
